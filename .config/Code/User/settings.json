{
    // Window settings
    "window.zoomLevel": 2,
    // Python settings
    "python.terminal.activateEnvironment": true,
    "terminal.integrated.inheritEnv": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    // Fonts and theme
    "editor.fontVariations": false,
    "editor.fontFamily": "'DejaVu Sans Mono'",
    "workbench.colorTheme": "Ayu Light Bordered",
    "editor.fontSize": 14,
    // Brackets settings
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": false,
    "explorer.confirmDragAndDrop": false,
    "security.workspace.trust.untrustedFiles": "open",
    // Format on save
    "editor.formatOnSave": true,
    "clang-format.style": "{ BasedOnStyle: llvm, IndentWidth: 4 }",
    // Ruler lines
    "editor.rulers": [
        80,
        120
    ],
    "editor.tabSize": 4,
    // GitLens settings
    "gitlens.currentLine.enabled": true,
    "gitlens.hovers.currentLine.over": "line",
    "explorer.confirmDelete": false,
    // Inlay hints on CTRL + ALT
    "editor.inlayHints.enabled": "offUnlessPressed",
    // Julia settings
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": true,
    "jupyter.showVariableViewWhenDebugging": true,
    "search.showLineNumbers": true,
    // Manage Clangd and Microsoft IntelliSense conflict
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.configurationWarnings": "disabled",
    "clangd.path": "/home/pa/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/17.0.3/clangd_17.0.3/bin/clangd",
    "clangd.arguments": [
        "-log=verbose",
        "-pretty",
        "--background-index",
        "--compile-commands-dir=${workspaceFolder}/build/",
        "--completion-style=detailed"
        // "--query-driver=/bin/arm-buildroot-linux-gnueabihf-g++", // for cross-compile usage
    ],
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    // Notebook settings
    "notebook.lineNumbers": "on",
    "editor.largeFileOptimizations": false,
    "git.terminalAuthentication": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.fontLigatures": false,
    "cmake.showOptionsMovedNotification": false,
    // Annoying lightbulb in notebook
    "editor.lightbulb.enabled": "off",
    // Oracle SQL
    "oracledevtools.bookmarkFileFolder": "/home/pa/Oracle/oracle.oracledevtools",
    "oracledevtools.download.otherFolder": "/home/pa/downloads",
    "oracledevtools.connectionConfiguration.configFilesFolder": "/home/pa/Oracle/network/admin",
    "oracledevtools.connectionConfiguration.walletFileFolder": "/home/pa/Oracle/network/admin",
    "[oraclesql]": {
        "editor.suggest.showSnippets": true,
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.defaultFormatter": "Oracle.oracledevtools"
    },
    "python.defaultInterpreterPath": "/home/pa/miniforge3/envs/cs/bin/python",
    // Git
    "git.suggestSmartCommit": false,
    "git.autofetch": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.insertSpaces": false,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // LaTeX Workshop
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.autoCompile.run": "never",
    "latex-workshop.latex.autoCompile.interval": 0,
    "latex-workshop.latex.autoCompile.onFailedBuild": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }    
      

}